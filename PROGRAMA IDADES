import java.util.Locate;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        Locate.setDefault(Locate.US);
        Scanner sc = new Scanner(System.in);

        String nome1, nome2;
        int idade1, idade2;
        double media;

    
        Sytem.out.println("Dados da primeira pessoa: ");
        System.out.print("Nome: ");
        nome1 = sc.nextLine();
        System.out.println("Idade: ");
        idade1 = sc.nextLine();

        Sytem.out.println("Dados da segunda pessoa: ");
        System.out.print("Nome: ");
        sc.nextLine();
        nome2 = sc.nextLine();
        System.out.println("Idade: ");
        idade2 = sc.nextLine();

        media = (idade1 + idade2)/ 2.0;
        System.out.println("A media de " + nome1 + "e" + nome2 + "Ã© de" + media + "anos.");
    
        sc.close();
    }
}
